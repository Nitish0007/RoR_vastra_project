<div class="form-container">
<div class="form-inner-container">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<h2>Forgot your password?</h2>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= tag.span f.submit "Send me reset password instructions", class: 'submit_btn' %>
  </div>

<div class="links-field">
<%= render "users/shared/links" %>
</div>

<% end %>


<div class="image_container">
<%= image_tag 'https://images.unsplash.com/photo-1676487030430-6cad55c86e8c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyNjJ8fHxlbnwwfHx8fA%3D%3D&auto=format&fit=crop&w=700&q=60', style: "height: 750px" %>
</div>

</div>

</div>