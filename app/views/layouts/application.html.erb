<!DOCTYPE html>
<html>
  <head>
    <title>Vastra</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  </head>

  <body>
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>


      <header class="header_section">
            <div class="container">
               <nav class="navbar navbar-expand-lg custom_nav-container ">
                  <a class="navbar-brand" href="//localhost:3000">
                  <%= image_tag image_url('vastra-logo.png'), alt:'logo', style: "width: 150px; height: 70px; object-fit: " %>
                  </a>
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class=""> </span>
                  </button>
                  <%= form_with class: "search-form", url: gallery_search_path, method: :post do |form| %>
                  <div class="wrapper-field">
                  <%= form.text_field :keyword %>
                  <%= form.submit 'Search', class: 'search-btn' %>
                  </div>
                  <% end %>
     
                  <div class="collapse navbar-collapse" id="navbarSupportedContent">
                     <ul class="navbar-nav">
                        
                        <li class="nav-item">
                           <a class="nav-link" href="//localhost:3000">Home <span class="sr-only">(current)</span></a>
                        </li>
                       
                        <li class="nav-item">
                           <a class="nav-link" href="//localhost:3000/gallery/index">Products</a>
                        </li>
                        
                        <% if user_signed_in? %>
                        <li class="nav-item">
                           <%= link_to 'Logout',destroy_user_session_path,method: :delete , class: 'nav-link' %>
                        </li>
                        <% else %>
                        <li class="nav-item">
                        <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
                        </li>
                        <% end %>

                        <% if session[:admin] %>
                        <li class="nav-item">
                           <%= link_to 'Admin Logout', admin_logout_path, class: 'nav-link' %>
                        </li>
                        <% else %>
                        <li class="nav-item">
                        <%= link_to 'Admin Login', admin_admin_login_path, class: 'nav-link' %>
                        </li>
                        <% end %>

                        <% if session[:admin] %>
                        <li class="nav-item">
                        <%= link_to 'Store', stores_path, class: 'nav-link' %>
                        </li>
                        <% end %>


                     </ul>
                  </div>
               </nav>
            </div>
      </header>
  


    <%= yield %>


   <footer>
         <div class="container">
            <div class="row">
               <div class="col-md-4">
                   <div class="full">
                      <div class="logo_footer">
                        <a href="#">
                        <%= image_tag image_url("vastra-logo.png"), alt: "", style: "height: 70px; width: 120px" %>
                        </a>
                      </div>
                      <div class="information_f">
                        <p><strong>ADDRESS:</strong> 28 White tower, Street Name New York City, USA</p>
                        <p><strong>TELEPHONE:</strong> +91 987 654 3210</p>
                        <p><strong>EMAIL:</strong> yourmain@gmail.com</p>
                      </div>
                   </div>
               </div>
               <div class="col-md-8">
                  <div class="row">
                  <div class="col-md-7">
                     <div class="row">
                        <div class="col-md-6">
                     <div class="widget_menu">
                        <h3>Menu</h3>
                        <ul>
                           <li><a href="//localhost:3000">Home</a></li>
                           <li><a href="//localhost:3000/gallery/index">Product</a></li>
                        </ul>
                     </div>
                  </div>
                  <div class="col-md-6">
                     <div class="widget_menu">
                        <h3>Account</h3>
                        <ul>
                           <li><a href="//localhost:3000/users/sign_in">Login</a></li>
                           <li><a href="//localhost:3000/users/sign_up">Register</a></li>
                        </ul>
                     </div>
                  </div>
                     </div>
                  </div>     
                  
                  </div>
               </div>
            </div>
         </div>
      </footer>

   <!-- jQery -->
      <script src="js/jquery-3.4.1.min.js"></script>
      <!-- popper js -->
      <script src="js/popper.min.js"></script>
      <!-- bootstrap js -->
      <script src="js/bootstrap.js"></script>
      <!-- custom js -->
      <script src="js/custom.js"></script>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


  </body>
</html>
