<div class="store">
<h2>Store</h2>

<table class="table-bordered">
  <thead class="thead-dark">
    <tr class="table-dark">
      <th class="table-col">Title</th>
      <th class="table-col">Description</th>
      <th class="table-col">Price</th>
      <th class="table-col">Category</th>
      <th class="table-col">Colour</th>
      <th colspan="3" class="table-col"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr class="table-light">
        <td class="table-col"><%= store.title %></td>
        <td class="table-col"><%= store.description %></td>
        <td class="table-col"><%= store.price %></td>
        <td class="table-col"><%= store.category %></td>
        <td class="table-col"><%= store.colour %></td>
        <td>
        <%= link_to 'Show', store %>
        <%= link_to 'Edit', edit_store_path(store) %>
        <%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_store_path, class: 'submit_btn' %>
</div>